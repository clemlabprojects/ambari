<configuration supports_adding_forbidden="true">
    <property>
        <name>ssl.client.truststore.location</name>
        <value>/etc/hadoop/conf/ozone.httpfs/truststore.jks</value>
        <display-name>Ozone HTTPFS Gateway Truststore Location</display-name>
        <description>File containing Ozone HTTPFS Gateway JAVA truststore.
        </description>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.client.truststore.password</name>
        <value>changeit</value>
        <display-name>Ozone HTTPFS Gateway Truststore Location</display-name>
        <description>Ozone HTTPFS Gateway Truststore Password</description>
        <value-attributes>
            <type>password</type>
        </value-attributes>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.client.truststore.type</name>
        <value>jks</value>
        <display-name>Ozone HTTPFS Gateway Truststore Type</display-name>
        <description>Ozone HTTPFS Gateway Truststore Type</description>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.client.truststore.reload.interval</name>
        <value>10000</value>
        <display-name>Ozone HTTPFS Gateway Truststore Reload Interval</display-name>
        <description>Ozone HTTPFS Gateway Truststore Reload Interval</description>
        <on-ambari-upgrade add="false"/>
    </property>
</configuration>
