<configuration>
  <!-- Uncomment this if you would like to expose Logback JMX beans -->
  <!--jmxConfigurator /-->
  <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
  <property name="zookeeper.console.threshold" value="{{zookeeper_log_level}}" />
  <!--
    console
    Add "console" to root logger if you want to use this
  -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>${zookeeper.console.threshold}</level>
    </filter>
  </appender>
  <root level="{{zookeeper_log_level}}">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>