<configuration supports_adding_forbidden="true">
    <property>
        <name>ssl.server.keystore.location</name>
        <value>/etc/hadoop/conf/ozone.recon/keystore.jks</value>
        <display-name>Ozone RECON UI Keystore Location</display-name>
        <description>File containing Ozone RECON UI JAVA KeyStore.
        </description>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.server.keystore.password</name>
        <value>changeit</value>
        <display-name>Ozone RECON UI Keystore Password</display-name>
        <description>Ozone RECON UI Keystore Password</description>
        <value-attributes>
            <type>password</type>
        </value-attributes>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.server.keystore.keypassword</name>
        <value>changeit</value>
        <display-name>Ozone RECON UI Keystore Key Password</display-name>
        <description>Ozone RECON UI Keystore Key Password</description>
        <value-attributes>
            <type>password</type>
        </value-attributes>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.server.keystore.type</name>
        <value>jks</value>
        <display-name>Ozone RECON UI Keystore Type</display-name>
        <description>Ozone RECON UI Keystore Type</description>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>ssl.server.exclude.cipher.list</name>
        <value>^TLS_DHE.*$,^.*SHA$,^TLS_RSA_WITH.*$,^.*MD5.*$,^TLS_DH_.*$,^.*RC4.*$,^.*CCM.*$</value>
        <display-name>Ozone RECON UI Keystore Type</display-name>
        <description>Ozone RECON UI Keystore Type</description>
        <on-ambari-upgrade add="false"/>
    </property>
    <property>
        <name>hadoop.security.credential.provider.path</name>
        <value>localjceks://file/etc/hadoop/conf/ozone.recon/credential.jceks</value>
        <display-name>Ozone RECON UI Hadoop Crendential Provider</display-name>
        <description>Keystore used by Ozone RECON UI to store SSL related secrets.</description>
        <on-ambari-upgrade add="false"/>
    </property>
</configuration>
